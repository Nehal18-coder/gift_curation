<div class="card mb-3">
  <h2 class="card-header h4">
    User #<%= user.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Username</dt>
      <!-- Display username start -->
      <dd><%= user.username %></dd>
      <!-- Display username end -->

      <dt>Password</dt>
      <!-- Display password start -->
      <dd><%= user.password %></dd>
      <!-- Display password end -->

      <dt>Birthday</dt>
      <!-- Display birthday start -->
      <dd><%= user.birthday %></dd>
      <!-- Display birthday end -->

      <dt>Interests</dt>
      <!-- Display interests start -->
      <dd><%= user.interests %></dd>
      <!-- Display interests end -->

      <dt>Address</dt>
      <!-- Display address start -->
      <dd><%= user.address %></dd>
      <!-- Display address end -->

      <dt>Category</dt>
      <!-- Display category_id start -->
      <dd><%= user.category_id %></dd>
      <!-- Display category_id end -->

      <dt>Postcard</dt>
      <!-- Display postcard_id start -->
      <dd><%= user.postcard_id %></dd>
      <!-- Display postcard_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back user, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link user start -->
      <div class="col">
        <%= link_to edit_user_url(user), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link user end -->

      <!-- Delete link user start -->
      <div class="col">
        <%= link_to user, method: :delete, data: { confirm: "Do you really want to delete this user?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link user end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(user.updated_at) %> ago
  </div>
</div>
