<%= search_form_for @q, :class => collapse_search_form, :id => "users_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :username_cont, "Username contains" %>
    <%= f.text_field :username_cont, :class => "form-control", :placeholder => "Username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :postcard_id, "Postcard" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :postcard_id_gteq, :class => "form-control", :placeholder => "Postcard greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :postcard_id_lteq, :class => "form-control", :placeholder => "Postcard less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :category_id_gteq, :class => "form-control", :placeholder => "Category greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :category_id_lteq, :class => "form-control", :placeholder => "Category less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address_cont, "Address contains" %>
    <%= f.text_field :address_cont, :class => "form-control", :placeholder => "Address contains" %>
  </div>

  <div class="form-group">
    <%= f.label :interests_cont, "Interests contains" %>
    <%= f.text_field :interests_cont, :class => "form-control", :placeholder => "Interests contains" %>
  </div>

  <div class="form-group">
    <%= f.label :birthday, "Birthday" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='birthdaygteqPicker' data-target-input="nearest">
          <%= f.text_field :birthday_gteq, :class => "form-control datetimepicker-input", :placeholder => "Birthday greater than or equal to", :data => {:target => '#birthdaygteqPicker'} %>
          <div class="input-group-append" data-target='#birthdaygteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='birthdaylteqPicker' data-target-input="nearest">
          <%= f.text_field :birthday_lteq, :class => "form-control datetimepicker-input", :placeholder => "Birthday less than or equal to", :data => {:target => '#birthdaylteqPicker'} %>
          <div class="input-group-append" data-target='#birthdaylteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#birthdaygteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#birthdaylteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#birthdaygteqPicker').on("dp.change", function (e) {
              $('#birthdaylteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#birthdaylteqPicker').on("dp.change", function (e) {
              $('#birthdaygteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Postcard Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='postcardsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :postcards_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Postcard Created at greater than or equal to", :data => {:target => '#postcardsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#postcardsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='postcardslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :postcards_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Postcard Created at less than or equal to", :data => {:target => '#postcardslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#postcardslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#postcardsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#postcardslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#postcardsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#postcardslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#postcardslteqcreated_atPicker').on("dp.change", function (e) {
              $('#postcardsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/users" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

