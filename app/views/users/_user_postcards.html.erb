<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Postcards

    <a data-toggle="collapse" href="#user_postcards_new_form">
      Add postcard
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.postcards.each do |postcard| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to postcard, postcard %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to postcard, method: :delete, data: { confirm: "Do you really want to delete this postcard" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_postcards_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_postcards_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
