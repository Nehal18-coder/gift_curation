<%= search_form_for @q, :class => collapse_search_form, :id => "postcards_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :bookmark_id, "Bookmark" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :bookmark_id_gteq, :class => "form-control", :placeholder => "Bookmark greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :bookmark_id_lteq, :class => "form-control", :placeholder => "Bookmark less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :delivery_time_cont, "Delivery time contains" %>
    <%= f.text_field :delivery_time_cont, :class => "form-control", :placeholder => "Delivery time contains" %>
  </div>

  <div class="form-group">
    <%= f.label :price_cont, "Price contains" %>
    <%= f.text_field :price_cont, :class => "form-control", :placeholder => "Price contains" %>
  </div>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :postcard_name_cont, "Postcard name contains" %>
    <%= f.text_field :postcard_name_cont, :class => "form-control", :placeholder => "Postcard name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_username_cont, "User username contains" %>
    <%= f.text_field :user_username_cont, :class => "form-control", :placeholder => "User username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :category_type_of_postcard_cont, "Category type_of_postcard contains" %>
    <%= f.text_field :category_type_of_postcard_cont, :class => "form-control", :placeholder => "Category type_of_postcard contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/postcards" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#postcards_filters">
  Show filters
</a>
