<% was_validated = postcard.errors.any? %>

<%= form_with(model: postcard, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for postcard_image start -->
  <div class="form-group">
    <% postcard_image_class = "form-control" %>
    <% postcard_image_was_invalid = postcard.errors.include?(:postcard_image) %>

    <% if was_validated %>
      <% if postcard_image_was_invalid %>
        <% postcard_image_class << " is-invalid" %>
      <% else %>
        <% postcard_image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :postcard_image %>
    <!-- Input for postcard_image start -->
    <%= f.file_field :postcard_image, class: "form-control" %>
    <!-- Input for postcard_image end -->
    <% if postcard_image_was_invalid %>
      <% postcard.errors.full_messages_for(:postcard_image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for postcard_image end -->
  <!-- Label and input for postcard_name start -->
  <div class="form-group">
    <% postcard_name_class = "form-control" %>
    <% postcard_name_was_invalid = postcard.errors.include?(:postcard_name) %>

    <% if was_validated %>
      <% if postcard_name_was_invalid %>
        <% postcard_name_class << " is-invalid" %>
      <% else %>
        <% postcard_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :postcard_name %>
    <!-- Input for postcard_name start -->
    <%= f.text_area :postcard_name, class: postcard_name_class, placeholder: "Enter postcard name" %>
    <!-- Input for postcard_name end -->
    <% if postcard_name_was_invalid %>
      <% postcard.errors.full_messages_for(:postcard_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for postcard_name end -->
  <!-- Label and input for description start -->
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = postcard.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, class: description_class, placeholder: "Enter description" %>
    <!-- Input for description end -->
    <% if description_was_invalid %>
      <% postcard.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for description end -->
  <!-- Label and input for price start -->
  <div class="form-group">
    <% price_class = "form-control" %>
    <% price_was_invalid = postcard.errors.include?(:price) %>

    <% if was_validated %>
      <% if price_was_invalid %>
        <% price_class << " is-invalid" %>
      <% else %>
        <% price_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :price %>
    <!-- Input for price start -->
    <%= f.text_field :price, class: price_class, placeholder: "Enter price" %>
    <!-- Input for price end -->
    <% if price_was_invalid %>
      <% postcard.errors.full_messages_for(:price).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for price end -->
  <!-- Label and input for delivery_time start -->
  <div class="form-group">
    <% delivery_time_class = "form-control" %>
    <% delivery_time_was_invalid = postcard.errors.include?(:delivery_time) %>

    <% if was_validated %>
      <% if delivery_time_was_invalid %>
        <% delivery_time_class << " is-invalid" %>
      <% else %>
        <% delivery_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :delivery_time %>
    <!-- Input for delivery_time start -->
    <%= f.text_field :delivery_time, class: delivery_time_class, placeholder: "Enter delivery time" %>
    <!-- Input for delivery_time end -->
    <% if delivery_time_was_invalid %>
      <% postcard.errors.full_messages_for(:delivery_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for delivery_time end -->
  <!-- Label and input for category_id start -->
  <div class="form-group">
    <% category_class = "form-control" %>
    <% category_was_invalid = postcard.errors.include?(:category) %>

    <% if was_validated %>
      <% if category_was_invalid %>
        <% category_class << " is-invalid" %>
      <% else %>
        <% category_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :category_id %>
    <!-- Input for category_id start -->
    <%= f.collection_select :category_id, Category.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for category_id end -->
    <% if category_was_invalid %>
      <% postcard.errors.full_messages_for(:category).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for category_id end -->
  <!-- Label and input for bookmark_id start -->
  <div class="form-group">
    <% bookmark_class = "form-control" %>
    <% bookmark_was_invalid = postcard.errors.include?(:bookmark) %>

    <% if was_validated %>
      <% if bookmark_was_invalid %>
        <% bookmark_class << " is-invalid" %>
      <% else %>
        <% bookmark_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :bookmark_id %>
    <!-- Input for bookmark_id start -->
    <%= f.number_field :bookmark_id, class: bookmark_class, placeholder: "Enter bookmark" %>
    <!-- Input for bookmark_id end -->
    <% if bookmark_was_invalid %>
      <% postcard.errors.full_messages_for(:bookmark).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for bookmark_id end -->
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = postcard.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% postcard.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
