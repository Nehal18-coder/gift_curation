<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Postcards

    <a data-toggle="collapse" href="#category_postcards_new_form">
      Add postcard
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.postcards.each do |postcard| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to postcard, postcard %>

        <%= link_to postcard, method: :delete, data: { confirm: "Do you really want to delete this postcard" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_postcards_new_form">
        <%= render partial: "categories/category_postcards_new_form" %>
      </div>
    </div>

  </ul>
</div>
